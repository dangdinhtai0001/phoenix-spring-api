package drools.rules.profile;

import com.phoenix.business.domain.Profile;

global com.phoenix.business.drools.FilterConditional condition;

dialect  "mvel"

rule "Student just find their profile"
    when
        $p :Profile(type == "STUDENT")
    then
        condition.setPermitted(true);
        condition.addConditional(String.format("p.code = '%s'",$p.getCode()));
    end;

